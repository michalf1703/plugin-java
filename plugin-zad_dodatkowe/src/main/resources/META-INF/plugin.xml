<idea-plugin>
    <id>moj.plugin.intellij</id>
    <name>My IntelliJ Plugin</name>
    <version>1.0</version>
    <vendor email="your.email@example.com" url="http://www.example.com">Your Name</vendor>

    <description><![CDATA[
    This is a simple IntelliJ plugin.
  ]]></description>

    <!-- Definicja akcji -->
    <actions>
        <!-- Akcja w menu kontekstowym -->
        <action id="MyPlugin.Action" class="MyPluginAction" text="Hello from My Plugin" description="Hello from My Plugin">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift H"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
